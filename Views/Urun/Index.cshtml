@using NetCore_PostgreSQL.Data.Entity
@model List<Urun>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/eTicaretLayout.cshtml";
}

<h1>Index</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Fiyat</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td> @item.Fiyat</td>
            <td><img class="card-img-top" style="width:50px;" src=@item.ImageUrl alt=""></td>
            <td>
                <a class="btn btn-danger" href="/Urun/delete?id=@item.Id">Sil</a>
                <a class="btn btn-primary" href="/Urun/update?id=@item.Id">Güncelle</a>
            </td>
        </tr>
    }

    </tbody>
</table>