@using NetCore_PostgreSQL.Data.Entity
@model List<Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/eTicaretLayout.cshtml";
}


<h2>Category List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>
                    <a class="btn btn-danger" href="/Kategori/delete?id=@item.Id">Sil</a>
                    <a class="btn btn-primary" href="/Kategori/update?id=@item.Id">Güncelle</a>
                </td>
            </tr>
        }

    </tbody>
</table>

